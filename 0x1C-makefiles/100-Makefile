CC = gcc
SRC = main.c school.c
OBJ = $(patsubst %.c, %.o, $(SRC))
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(OBJ) m.h
	$(CC) $^ -o $(NAME)

%.o: m.h

clean:
	# deletes all Emacs and Vim temporary files,
	# and the executable
	$(RM) -f *~ $(NAME)
	
oclean:
	# deletes the object files
	$(RM) -f $(wildcard *.o)

fclean: clean oclean

re: oclean all
